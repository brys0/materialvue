{
  "maxNodeModuleJsDepth": 5,
  "compilerOptions": {
    "types": [
      "node",
      "jsdom"
    ],
    "target": "es2022",
    "module": "es2022",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "isolatedModules": true,
    "lib": [
      "es2022",
      "dom",
      "dom.iterable",
      "webworker"
    ],
    "rootDirs": [
      "."
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.vue",
    "typings/**/*.d.ts",
    "vite.config*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "typeRoots": [
    "typings",
    "@types"
  ]
}